{
    "name": "stefnats/laravel-validation-locale",
    "description": "Laravel validator for locale string.",
    "type": "library",
    "keywords": [ "laravel", "validation", "locale", "validator" ],
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Stefan Neuhaus",
            "email": "stefan@n.euha.us"
        }
    ],
    "require": {
        "illuminate/validation": "^5.6|^6.0",
        "illuminate/translation": "^5.6|^6.0",
        "ext-intl": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.7"
    },
    "autoload": {
        "psr-4": {
            "Stefnats\\Locale\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Stefnats\\Locale\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always"
    }
}
